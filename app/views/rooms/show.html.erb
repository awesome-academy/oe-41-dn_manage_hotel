
<!--================Breadcrumb Area =================-->
<section class="breadcrumb_area">
  <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background=""></div>
  <div class="container">
    <div class="page-cover text-center">
      <h2 class="page-cover-tittle"><%= t ("special_accomodation") %></h2>
      <ol class="breadcrumb">
        <li><%= link_to t("home"), root_path %></li>
        <li class="active"><%= t ("accomodation") %></li>
      </ol>
    </div>
  </div>
</section>
<!--================Breadcrumb Area =================-->
<br>
<!--================Booking Tabel Area =================-->
<section class="hotel_booking_area">
  <div class="container">
    <div class="row hotel_booking_table">
      <div class="col-md-3">
        <h2><%= t("search") %><br><%= t("your_room") %></h2>
      </div>
      <div class="col-md-9" style="padding-right: 0px!important; padding-left: 47px!important">
        <div class="boking_table">
          <div class="row">
            <%= render "rooms/search" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!--================ Accomodation Area  =================-->
<section class="accomodation_area section_gap">
  <div class="col-sm-12">
    <%= render "rooms/rooms" %>
  </div>
  <div class="col-sm-12" style="display: flex; justify-content: center; margin-top: 3rem">
    <%= will_paginate @rooms, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
  </div>
</section>
