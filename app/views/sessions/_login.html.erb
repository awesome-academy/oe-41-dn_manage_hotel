<%= form_for :session, url: login_path, method: :post do |f| %>
  <form>
    <div class="form-group">
      <%= f.text_field :email, class: "form-control",placeholder: t("email")  %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: "form-control",placeholder: t("password") %>
    </div>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label t ("remember_me") %>
    </div>
     <span><%= t "dont_have_an_account" %></span>
      <%= link_to t("sign_up"), signup_path %>
    <%= f.submit yield(:button_text), class: "btn btn-warning float-right login_btn" %>
  </form>
<% end %>
