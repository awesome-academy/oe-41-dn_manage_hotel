<section class="banner-area relative" style="height: 700px">
  <div class="overlay overlay-bg"></div>
  <div class="container" >
    <div class="row d-flex align-items-center justify-content-center"
    style="padding: 140px 25px 0 25px;">
      <table class="table table-striped table-dark">
        <thead>
          <tr class="bg-primary">
            <th scope="col">#</th>
            <th scope="col"><%= t("room") %></th>
            <th scope="col"><%= t("start_date") %></th>
            <th scope="col"><%= t("end_date") %></th>
            <th scope="col"><%= t("price") %></th>
            <th scope="col"><%= t("name_cus") %></th>
            <th scope="col"><%= t("status") %></th>
            <th scope="col"><%= t("action") %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @user_bookeds%>
        </tbody>
      </table>
      <%= will_paginate @user_bookeds, theme: "twitter-bootstrap-4",
                                       pagination_class: "pagination-sm"  %>
    </div>
  </div>
</section>
